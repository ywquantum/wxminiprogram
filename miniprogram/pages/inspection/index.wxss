/**index.wxss**/
.askLeave {
  width: 100%;
  height: auto;
  background-color: #F6F6F6;
  overflow: hidden;
  margin-top: 36px;
}

.askLeaveBtn {
  width: 50px;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  color: #F6F6F6;
  border-radius: 4px;
  background-color: #1F984D;
  text-align: center;
  margin-top: 3px;
  float: right;
  margin-right: 10px;
}

.inspection_list {
  width: 100%;
  height: auto;
}

.inspectionListBox {
  width: 94%;
  height: auto;
  padding: 10px 10px;
  margin-left: 3%;
  background-color: rgb(185, 185, 185);
  margin-top: 10px;
  box-sizing: border-box;
  border-radius: 4px;
}

.inspectionListBox:last-child {
  margin-bottom: 20px;
}

.inspectionBaseLine {
  width: 100%;
  height: 24px;
  line-height: 24px;
  font-size: 16px;
  font-weight: 700;
  color: #222;
}

.inspectionInstructionsLine {
  width: 100%;
  height: auto;
  min-height: 40px;
  font-size: 13px;
  margin: 5px 0 5px 0;
}

.workDoneLine {
  width: 100%;
  height: 32px;
  font-size: 13px;
  margin: 5px 0 5px 0;
  line-height: 32px;
  display: flex;
  justify-content: space-between;
}

.inspectionDoubleLine {
  width: 100%;
  height: 45px;
  display: flex;
}

.inspectionImgBoxLine {
  display: flex;
  width: 100%;
  height: auto;
  flex-flow: wrap;
  justify-content: flex-start;
}

.inspection_img {
  display: inline-block;
  width: calc(33.3333% - 8px);
  height: 90px;
  margin-bottom: 10px;
  margin-right: 12px;
}

.inspection_img:nth-child(3n) {
  margin-right: 0px;
}

.inspection_image {
  width: 100%;
  height: 100%;
}

.inspectionTimesLine {
  width: calc(100% - 100px);
  font-size: 13px;
}

.inspectionBtn {
  width: 100px;
  height: 30px;
  border-radius: 4px;
  background-color: #D7D7D7;
  text-align: center;
  line-height: 30px;
}

.inspectionTimesLineHight {
  width: calc(100% - 100px);
  font-size: 13px;
  color: #D9001B;
}

.inspectionBtnHight {
  width: 100px;
  height: 30px;
  border-radius: 4px;
  background-color: #D9001B;
  text-align: center;
  line-height: 30px;
  color: #fff;
}

.workBaseTextMargin {
  width: 100%;
  height: 32px;
  line-height: 32px;
  font-size: 14px;
}

.workBaseTextMarginRight {
  width: 100%;
  height: 32px;
  line-height: 32px;
  font-size: 14px;
  text-align: right;
}

.workBaseSide {
  width: 100%;
  height: 32px;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}

.collapseBaseLine {
  width: 100%;
  margin-bottom: 10px;
}